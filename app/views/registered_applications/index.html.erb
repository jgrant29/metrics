<p id="notice"><%= notice %></p>

<h1>Listing Registered Applications</h1>

 <div class="row">
   <div class="col-md-8">
     <% @registered_applications.each do |registered_application| %>
       <div class="media">
         <div class="media-body">
           <h4 clas="media-heading">
             <%= link_to registered_application.name, registered_application %>
           </h4>
         </div>
       </div>
     <% end %>
   </div>
 <br>
   <div class="col-md-4">
    <%= link_to 'New Registered application', new_registered_application_path, class: 'btn btn-success' %>
   </div>
 </div>
